{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ES2018", "ESNext", "ESNext.AsyncIterable", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
